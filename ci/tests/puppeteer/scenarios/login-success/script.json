{
  "dependencies": "core,google-analytics,sentry",
  "conditions": {
    "docker": "true"
  },
  "properties": [
    "--cas.server.tomcat.http[0].enabled=true",
    "--cas.server.tomcat.http[0].port=8080",
    
    "--cas.server.name=http://localhost:8080",
    "--cas.server.prefix=http://localhost:8080/cas",

    "--cas.sso.mail.from=admin@apereo.org",
    "--cas.sso.mail.subject=Authentication",
    "--cas.sso.mail.attribute-name=mail",
    
    "--cas.google-analytics.google-analytics-tracking-id=G-XF7F4RCQ0J",
    "--cas.authn.accept.users=casuser::Mellon,fancyuser::jleleuâ¬",
    "--cas.service-registry.core.init-from-json=true",

    "--cas.authn.attribute-repository.stub.attributes.mail=casuser@apereo.org",

    "--spring.mail.host=localhost",
    "--spring.mail.port=25000",

    "--cas.monitor.endpoints.endpoint.defaults.access=ANONYMOUS",
    "--management.endpoints.web.exposure.include=*",
    "--management.endpoints.access.default=UNRESTRICTED",
    "--management.server.port=8081"
  ],
  "SPRING_APPLICATION_JSON": {
    "cas": {
      "sso": {
        "mail": {
          "text": "${#principal.id} @ ${#clientInfo.clientIpAddress}"
        }
      }
    }
  },
  "jvmArgs": "-Djava.net.preferIPv4Stack=true -Djava.net.preferIPv4Addresses=true",
  "initScript": "${PWD}/ci/tests/httpbin/run-httpbin-server.sh,${PWD}/ci/tests/mail/run-mail-server.sh"
}
