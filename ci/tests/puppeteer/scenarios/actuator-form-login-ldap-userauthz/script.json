{
  "dependencies": "reports,ldap",
  "conditions": {
    "docker": "true"
  },
  "environmentVariables": [
    "CAS_LDAP_BIND_DN=cn=Directory Manager"
  ],
  "properties": [
    "--cas.server.name=https://localhost:8443",
    "--cas.server.prefix=${cas.server.name}/cas",

    "--cas.monitor.endpoints.endpoint.defaults.access=AUTHENTICATED",
    "--cas.monitor.endpoints.form-login-enabled=true",

    "--management.endpoints.access.default=UNRESTRICTED",
    "--management.endpoints.web.exposure.include=*",

    "--cas.monitor.endpoints.ldap.ldap-url=ldap://localhost:11389",
    "--cas.monitor.endpoints.ldap.base-dn=ou=people,dc=example,dc=org",
    "--cas.monitor.endpoints.ldap.search-filter=uid={user}",
    "--cas.monitor.endpoints.ldap.bind-dn=cn=admin,dc=example,dc=org",
    "--cas.monitor.endpoints.ldap.bind-credential=P@ssw0rd",

    "--cas.monitor.endpoints.ldap.ldap-authz.base-dn=ou=People,dc=example,dc=org",
    "--cas.monitor.endpoints.ldap.ldap-authz.search-filter=uid={user}",
    "--cas.monitor.endpoints.ldap.ldap-authz.role-attribute=memberOf",
    "--cas.monitor.endpoints.ldap.ldap-authz.role-prefix=ROLE_",

    "--spring.security.user.roles[0]=CN=CASADMINS,OU=GROUPS,DC=EXAMPLE,DC=ORG"
  ],
  "initScript": "${PWD}/ci/tests/ldap/run-ldap-server.sh"
}
