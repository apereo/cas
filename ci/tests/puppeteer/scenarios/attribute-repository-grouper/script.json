{
  "dependencies": "grouper",
  "conditions": {
    "docker": "true"
  },
  "properties": [
    "--cas.server.name=https://localhost:8443",
    "--cas.server.prefix=${cas.server.name}/cas",
    "--cas.http-client.host-name-verifier=none",

    "--cas.authn.attribute-repository.core.expiration-time=1",
    "--cas.authn.attribute-repository.core.expiration-time-unit=seconds",
    
    "--cas.authn.attribute-repository.grouper.id=Grouper",
    "--cas.authn.attribute-repository.grouper.subject-type=SUBJECT_ID",

    "--cas.authn.accept.users=GrouperSystem::Mellon",

    "--cas.service-registry.core.init-from-json=true",
    "--cas.service-registry.json.location=file:${PWD}/ci/tests/puppeteer/scenarios/${SCENARIO}/services"
  ],
  "buildScript": "${PWD}/ci/tests/puppeteer/scenarios/${SCENARIO}/include.gradle",
  "initScript": "${PWD}/ci/tests/grouper/run-grouper-server.sh,${PWD}/ci/tests/httpbin/run-httpbin-server.sh"
}

