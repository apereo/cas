	<bean
		id="simpleMappingHandlerExceptionResolver"
		class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
		<property
			name="exceptionMappings">
			<props>
				<prop
					key="UndeclaredThrowableException">
					serviceErrorView
				</prop>
			</props>
		</property>
	</bean>

	<bean
		id="loginFormAction"
		class="org.jasig.cas.web.flow.LoginFormAction">
		<property
			name="centralAuthenticationService"
			ref="centralAuthenticationService" />
	</bean>

	<bean id="warnAction" class="org.jasig.cas.web.flow.WarnAction" />

	<bean
		id="ticketGrantingTicketCheckAction"
		class="org.jasig.cas.web.flow.TicketGrantingTicketCheckAction">
		<property
			name="centralAuthenticationService"
			ref="centralAuthenticationService" />
	</bean>
</beans>