	<bean id="statsBean" class="org.jasig.cas.stat.support.TicketStatsImpl" />
	
	<bean id="logTicketStatisticsAfterReturningAdvice" class="org.jasig.cas.stat.advice.LogTicketStatisticsAfterReturningAdvice">
		<property name="ticketStatsManager"><ref local="statsBean" /></property>
        <property name="statsStateMutators">
            <props>
                <prop key="delegateTicketGrantingTicket">incrementNumberOfProxyGrantingTicketsVended</prop>
                <prop key="grantServiceTicket">incrementNumberOfServiceTicketsVended</prop>
                <prop key="createTicketGrantingTicket">incrementNumberOfTicketGrantingTicketsVended</prop>
                <prop key="">incrementNumberOfProxyTicketsVended</prop>
            </props>
        </property>
	</bean>
	
	<bean id="advisorAutoProxyCreator" class="org.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator" />
	
	<bean id="logStatsAdvisor" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
		<constructor-arg><ref local="logTicketStatisticsAfterReturningAdvice" /></constructor-arg>
		<property name="patterns">
			<list>
				<value>.*CentralAuthenticationService.*delegateTicketGrantingTicket.*</value>
				<value>.*CentralAuthenticationService.*grantServiceTicket.*</value>
				<value>.*CentralAuthenticationService.*createTicketGrantingTicket.*</value>
			</list>
		</property>
        <property name="perl5">
            <value>false</value>
        </property>
	</bean>
    
</beans>