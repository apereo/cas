<?xml version="1.0" encoding="UTF-8" ?>
<Configuration shutdownHook="disable">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%d %p [%c{1.}] - &lt;%m&gt;%n}" />
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.apereo.cas" level="error" />
        <Logger name="org.apereo.cas.ticket.registry" level="warn" />
        <Logger name="org.hibernate.stat" level="debug" />
        <Logger name="org.hibernate.engine.internal.StatisticalLoggingSessionEventListener" level="info" />
        <Logger name="org.springframework.jdbc" level="warn" />
        <Logger name="org.springframework.transaction" level="warn" />
        <Logger name="org.springframework.integration" level="warn" />
        <Logger name="org.hibernate.sql" level="warn" />
        <Logger name="org.hibernate.engine" level="warn" />
        <Root level="off">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>
