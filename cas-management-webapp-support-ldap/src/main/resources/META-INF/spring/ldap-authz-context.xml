<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:ldaptive="http://www.ldaptive.org/schema/spring-ext"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.ldaptive.org/schema/spring-ext http://www.ldaptive.org/schema/spring-ext.xsd">

    <alias name="ldapAuthorizationGenerator" alias="authorizationGenerator" />
    
    <ldaptive:pooled-connection-factory
            id="ldapAuthorizationGeneratorConnectionFactory"
            ldapUrl="${ldap.url:}"
            blockWaitTime="${ldap.pool.blockWaitTime:5000}"
            failFastInitialize="true"
            connectTimeout="${ldap.connectTimeout:5000}"
            useStartTLS="${ldap.useStartTLS:false}"
            validateOnCheckOut="${ldap.pool.validateOnCheckout:true}"
            validatePeriodically="${ldap.pool.validatePeriodically:true}"
            validatePeriod="${ldap.pool.validatePeriod:15000}"
            idleTime="${ldap.pool.idleTime:10000}"
            maxPoolSize="${ldap.pool.maxSize:1}"
            minPoolSize="${ldap.pool.minSize:1}"
            useSSL="${ldap.use.ssl:false}"
            prunePeriod="${ldap.pool.prunePeriod:10000}"
    />

    <bean id="ldapAuthorizationGeneratorUserSearchExecutor" class="org.ldaptive.SearchExecutor"
          p:baseDn="${ldap.baseDn:}"
          p:searchFilter="${ldap.user.searchFilter:}"
          p:returnAttributes-ref="userDetailsUserAttributes"/>

    <bean id="ldapAuthorizationGeneratorRoleSearchExecutor" class="org.ldaptive.SearchExecutor"
          p:baseDn="${ldap.role.baseDn:}"
          p:searchFilter="${ldap.role.searchFilter:}"
          p:returnAttributes-ref="userDetailsRoleAttributes"/>

    <bean id="userDetailsUserAttributes"
          class="org.springframework.util.StringUtils" factory-method="commaDelimitedListToSet">
        <constructor-arg type="java.lang.String" value="${ldap.user.attributes:}"/>
    </bean>

    <bean id="userDetailsRoleAttributes"
          class="org.springframework.util.StringUtils" factory-method="commaDelimitedListToSet">
        <constructor-arg type="java.lang.String" value="${ldap.role.attributes:}"/>
    </bean>


</beans>
