{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":rebaseStalePrs",
    ":preserveSemverRanges",
    ":disableRateLimiting",
    ":semanticCommits",
    ":semanticCommitTypeAll(renovatebot)",
    "group:monorepos",
    "group:recommended",
    "replacements:all",
    "workarounds:all"
  ],
  "enabledManagers": [
    "gradle",
    "npm",
    "regex",
    "dockerfile",
    "docker-compose",
    "github-actions"
  ],
  "regexManagers": [
    {
      "fileMatch": ["run-.*\\.sh"],
      "matchStrings": [
        "export\\s+DOCKER_IMAGE\\s*=\\s*\"(?<depName>[^\"]+):(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "labels": ["Bot", "Renovate"],
  "schedule": [
    "after 10pm and before 6am every weekday"
  ],
  "docker": {
    "enabled": true
  },
  "dockerfile": {
    "enabled": true
  },
  "docker-compose": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": ["gradle", "maven"],
      "enabled": false
    },
    {
      "matchManagers": ["github-actions"],
      "enabled": true
    },
    {
      "managers": ["dockerfile"],
      "groupName": "all-docker-updates"
    },
    {
      "matchDatasources": ["docker"],
      "versioning": "semver"
    },
    {
      "matchFileNames": ["**/package.json"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"]
    }
  ]
}
